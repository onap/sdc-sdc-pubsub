{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src"
  },
  "files": [
    "./index.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}